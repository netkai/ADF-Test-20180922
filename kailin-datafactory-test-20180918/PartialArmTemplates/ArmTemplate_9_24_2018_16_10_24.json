{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "kailin-datafactory-test-20180918"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/pipeline1')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Custom1",
						"type": "Custom",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "userProperty1",
								"value": "test123"
							}
						],
						"typeProperties": {
							"command": "cmd /c echo hello world from ADF custom activity",
							"resourceLinkedService": {
								"referenceName": "AzureBlobStorage1",
								"type": "LinkedServiceReference"
							},
							"folderPath": "container-klintemenos-private-20180905",
							"extendedProperties": {
								"customDelimiter": ","
							},
							"referenceObjects": {
								"linkedServices": [
									{
										"referenceName": "AzureSqlDatabaseADFv2AsSink1",
										"type": "LinkedServiceReference"
									}
								],
								"datasets": [
									{
										"referenceName": "AzureSqlTableSource1",
										"type": "DatasetReference"
									},
									{
										"referenceName": "AzureSqlTableSink1",
										"type": "DatasetReference"
									}
								]
							}
						},
						"linkedServiceName": {
							"referenceName": "AzureBatch1",
							"type": "LinkedServiceReference"
						}
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/AzureSqlTableSource1')]",
				"[concat(variables('factoryId'), '/datasets/AzureSqlTableSink1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureSqlTableSink1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "ADF v2 Test Sql Table as Sink 1",
				"linkedServiceName": {
					"referenceName": "AzureSqlDatabaseADFv2AsSink1",
					"type": "LinkedServiceReference"
				},
				"type": "AzureSqlTable",
				"structure": [
					{
						"name": "ProductDescriptionID",
						"type": "Int32"
					},
					{
						"name": "Description",
						"type": "String"
					},
					{
						"name": "rowguid",
						"type": "Guid"
					},
					{
						"name": "ModifiedDate",
						"type": "DateTime"
					}
				],
				"typeProperties": {
					"tableName": "[concat('[', 'SalesLT].[ProductDescription]')]"
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureSqlTableSource1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureSqlDatabase1",
					"type": "LinkedServiceReference"
				},
				"type": "AzureSqlTable",
				"structure": [
					{
						"name": "ProductDescriptionID",
						"type": "Int32"
					},
					{
						"name": "Description",
						"type": "String"
					},
					{
						"name": "rowguid",
						"type": "Guid"
					},
					{
						"name": "ModifiedDate",
						"type": "DateTime"
					}
				],
				"typeProperties": {
					"tableName": "[concat('[', 'SalesLT].[ProductDescription]')]"
				}
			}
		}
	]
}